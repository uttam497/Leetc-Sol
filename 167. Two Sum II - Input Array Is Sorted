class Solution {
    public int[] twoSum(int[] nums, int target) {
       //int ar[]=new int[2];
    int l=0;
        int r=nums.length-1;
        while(l<r)
        {
            int sum=nums[l]+nums[r];
            if(sum==target) return new int[] {l+1, r+1};
            else if(target>sum)
                l++;
            else r--;
	    }

	return new int[2];
    }   
}
